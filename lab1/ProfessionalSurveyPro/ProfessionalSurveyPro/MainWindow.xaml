<Window x:Class="ProfessionalSurveyPro.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProfessionalSurveyPro"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="#FF1E1E2E" Offset="0"/>
                <GradientStop Color="#FF2D2D44" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>

        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="400">
            <TextBlock Text="Опитування студентів" FontSize="28" Foreground="White" 
                   HorizontalAlignment="Center" Margin="0,0,0,20" FontWeight="Bold"/>

            <Border Background="#3D3D5C" CornerRadius="15" Padding="20" Margin="0,10">
                <StackPanel>
                    <TextBlock Text="Яке ваше враження від курсу?" Foreground="#B0B0D1" Margin="0,0,0,10"/>
                    <TextBox x:Name="txtAnswer" Height="100" TextWrapping="Wrap" AcceptsReturn="True"
                         Background="#2D2D44" Foreground="White" BorderBrush="#5E5E87" 
                         Padding="10" FontSize="14" VerticalScrollBarVisibility="Auto"/>
                </StackPanel>
            </Border>

            <Button x:Name="btnSave" Content="Зберегти відповідь" Height="45" Margin="0,20,0,0"
                Click="btnSave_Click" Cursor="Hand">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="10"/>
                    </Style>
                </Button.Resources>
                <Button.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="#FF624AF2" Offset="0"/>
                        <GradientStop Color="#FF4A32C1" Offset="1"/>
                    </LinearGradientBrush>
                </Button.Background>
                <Button.Foreground>White</Button.Foreground>
            </Button>
        </StackPanel>
    </Grid>
</Window>
