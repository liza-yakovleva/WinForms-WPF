<Window x:Class="ProfessionalSurveyPro.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Modern Survey System v2.0" Height="650" Width="500"
        WindowStartupLocation="CenterScreen" Background="#F4F4F9">

    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="#FF1E1E2E" Offset="0"/>
                <GradientStop Color="#FF2D2D44" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>

        <ScrollViewer VerticalScrollBarVisibility="Auto" Margin="10">
            <StackPanel Margin="20">
                <TextBlock Text="Анкета студента" FontSize="32" FontWeight="Bold" 
                           Foreground="White" HorizontalAlignment="Center" Margin="0,0,0,25"/>

                <TextBlock Text="1. Ваше прізвище та ім'я:" Foreground="#B0B0D1" Margin="0,10,0,5"/>
                <TextBox x:Name="txtName" Height="35" VerticalContentAlignment="Center" Padding="5" FontSize="14"/>

                <TextBlock Text="2. Оцініть складність курсу (1-10):" Foreground="#B0B0D1" Margin="0,15,0,5"/>
                <DockPanel>
                    <TextBlock Text="{Binding ElementName=sldDifficulty, Path=Value}" Foreground="White" Width="25" DockPanel.Dock="Right" TextAlignment="Right" VerticalAlignment="Center"/>
                    <Slider x:Name="sldDifficulty" Minimum="1" Maximum="10" TickFrequency="1" IsSnapToTickEnabled="True" Value="5"/>
                </DockPanel>

                <TextBlock Text="3. Ваш поточний рівень знань:" Foreground="#B0B0D1" Margin="0,15,0,5"/>
                <ComboBox x:Name="cmbLevel" Height="35" SelectedIndex="0">
                    <ComboBoxItem Content="Початківець (Junior)"/>
                    <ComboBoxItem Content="Середній (Middle)"/>
                    <ComboBoxItem Content="Професіонал (Senior)"/>
                </ComboBox>

                <GroupBox Header="4. Як ви оцінюєте лекції?" Foreground="#B0B0D1" Margin="0,15,0,0" Padding="10">
                    <StackPanel x:Name="panelRating">
                        <RadioButton Content="Чудово" Foreground="White" IsChecked="True" Margin="0,5"/>
                        <RadioButton Content="Задовільно" Foreground="White" Margin="0,5"/>
                        <RadioButton Content="Погано" Foreground="White" Margin="0,5"/>
                    </StackPanel>
                </GroupBox>

                <GroupBox Header="5. Які модулі вам цікаві?" Foreground="#B0B0D1" Margin="0,15,0,0" Padding="10">
                    <StackPanel x:Name="panelModules">
                        <CheckBox Content="Програмування C#" Foreground="White" Margin="0,5"/>
                        <CheckBox Content="Архітектура комп'ютера" Foreground="White" Margin="0,5"/>
                        <CheckBox Content="Операційні системи" Foreground="White" Margin="0,5"/>
                    </StackPanel>
                </GroupBox>

                <TextBlock Text="6. Ваші побажання:" Foreground="#B0B0D1" Margin="0,15,0,5"/>
                <TextBox x:Name="txtComments" Height="80" TextWrapping="Wrap" AcceptsReturn="True" Padding="5"/>

                <Button x:Name="btnSave" Content="ЗБЕРЕГТИ АНКЕТУ" Height="50" Margin="0,30,0,20"
                        Background="#624AF2" Foreground="White" FontWeight="Bold" FontSize="16"
                        Click="btnSave_Click">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="10"/>
                        </Style>
                    </Button.Resources>
                </Button>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>